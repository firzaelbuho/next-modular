{
  "name": "nxt-modular",
  "version": "1.0.1",
  "description": "CLI generator for Next.js modular architecture (Page Router & App Router)",
  "license": "MIT",
  "author": "firzaelbuho",

  "type": "module",
  "module": "dist/cli.js",

  "bin": {
    "next-modular": "./dist/cli.js"
  },

  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],

  "keywords": [
    "nextjs",
    "next",
    "cli",
    "generator",
    "modular",
    "architecture",
    "bun",
    "zustand",
    "tailwind",
    "daisyui"
  ],

  "scripts": {
    "build": "bun build ./src/cli.ts --outfile ./dist/cli.js --target node",
    "dev": "bun run src/cli.ts",
    "prepublishOnly": "bun run build"
  },

  "dependencies": {
    "commander": "^11.0.0",
    "picocolors": "^1.0.0"
  },

  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0"
  },

  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
